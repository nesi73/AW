<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/css/login.css">
    <link rel="stylesheet" href="/css/principal.css">
    <link rel="stylesheet" href="/css/preguntas.css">
    <link rel="stylesheet" href="/css/usuarios.css">
    <link rel="icon" type="img/png" href="/recursos/404icon.png">
    <title>404</title>
</head>

<body>
    <%- include('header'); %>

        <h1>
            <%=titulo%>
        </h1>

        <form method="POST" action="/usuarios/procesar_busqueda">
            <div class="filtrarUser">
                <button class="button">Filtrar</button>
                <input type="text" class="box" name="nombreUserBusqueda" placeholder=" 🔎   Filtrar por usuario">
            </div>
        </form>

        <div class="containerUsers">

            <% usuarios.forEach(function(u) { %>
                <div class="element">

                    <div class="usuario">
                        <div class="avatar">
                            <img class="img" src="../../profile_imgs/<%=u.avatar%>">
                        </div>

                        <div>
                            <form method="POST" action="/usuarios/perfil">
                                <button class="user" type="submit" name="correo" value="<%=u.correo%>">
                                    <%=u.nombre%>
                                </button>
                            </form>
                        </div>

                        <div class="reputacion">
                            <%=u.reputacion%>
                        </div>

                        <% if (u.nombreEtiqueta !=undefined) { %>
                            <div class="tags">
                                <div><span class="tag">
                                        <%=u.nombreEtiqueta%>
                                    </span></div>
                            </div>
                            <% } %>

                    </div>

                </div>

                <% }); %>


        </div>

</body>

</html>