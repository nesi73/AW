<!DOCTYPE html>
<html lang="en">

<head>

    <title>Gestor de Tareas</title>
    <meta charset="UTF-8">
    <link rel="stylesheet" media="screen" href="css/tasksScreen.css">
    <link rel="stylesheet" media="print" href="css/tasksPrint.css">
    <link rel="icon" type="img/png" href="img/icon.png">

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script> 
    <script src="/javascript/tasks.js"></script> 

</head>

<body>

    <div class="heading">
        <div class="logo">Esta semana tengo que...</div>
        <div class="infoUser">
            <img class="imgUser" src="/imagenUsuario">
            <div class="User">
                <a href=" "><%=userMail%></a>
                <a href="/logout" class="boton">Desconectar</a>
            </div>
        </div>
    </div>

    <div class="containerTasks">

        <% if (taskList != undefined) { %>
            <% taskList.forEach(function(task) { %>
                <% if(task.done==0){ %>
                    <div class="elemento">
                        <p class="texto"><%=task.text%></p>
    
                        <% if (task.tags.length>0) { %>
                            <% task.tags.forEach(function(t) { %>
                                <span class="tag">
                                    <%=t%>
                                </span>
                                <% }); %>
    
                                    <% } %>
    
                        <a class="botonFin" href="/finish/<%=task.id%>">MARCAR FINALIZADA</a> 
                    </div>
                  <% }
                  else{ %>  
                    <div class="elementoCross">
                        <p class="texto texto_cross"><%=task.text%></p>
                    </div>
                 <% } %>
    
                <% }); %>
        
        <% } %>

        <div class="AddTask">
            
            <div class="label"> <!--usar div para que aparezca arriba del input-->
                <label for="tarea">Nombre de tarea</label>
            </div>
            <input type="text" id="tarea" name="tarea" class="Write">
            
            <div class="añadirTag">
                <input type="text" id="tag" name="tag" class="WriteTag">
                <button class="botonAdd botonAddTag">AÑADIR TAG</button>
            </div>

            <form action="addTask" method="POST">
                <div id="display" class="Display">
                    <div id="tareas">
                        
                    </div>
                    <div id="etiquetas">
                        
                    </div>
                </div>
                <input type="submit" button class="botonAdd" value=AÑADIR>
                <input type="hidden" name="desc" id="desc">
            </form>
        </div>

        <div class="DeleteTask">
            <a class="botonDelete" href="/deleteCompleted">Eliminar Tareas Completadas</a>
        </div>
    </div>

</body>

</html>